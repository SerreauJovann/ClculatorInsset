<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

  <g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Projet de mise en pratique Scrum</h1>       
    <div class="bs-section">

        <g:FlowPanel>
          <g:FormPanel/>
          
            <g:FlowPanel>
                <g:Label>Montant inital et économie effectuée</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="price" text="Montant"/>     
              <g:TextBox ui:field="percentage" text="Pourcentage"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabel" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formActions" >
                <g:SubmitButton ui:field="boutonEnregistrer" text="Calculer"/>
                <g:ResetButton ui:field="boutonClear" text="Reset"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:FormPanel/>

                <g:FlowPanel>
                    <g:Label>Prix de départ</g:Label>
                </g:FlowPanel>
                <g:FlowPanel>          
                  <g:TextBox ui:field="price1" text="Montant"/>     
                  <g:TextBox ui:field="percentage1" text="Pourcentage"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label ui:field="errorLabel1" ></g:Label>
                </g:FlowPanel>
                <g:FlowPanel ui:field="formActions1" >
                    <g:SubmitButton ui:field="boutonEnregistrer1" text="Calculer"/>
                    <g:ResetButton ui:field="boutonClear1" text="Reset"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
        
        
    </div>
  </g:HTMLPanel>
</ui:UiBinder>