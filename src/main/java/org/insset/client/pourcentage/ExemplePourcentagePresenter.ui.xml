<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

  <g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Projet de mise en pratique Scrum</h1>       
    <div class="bs-section">
       <g:FlowPanel>
        <g:FlowPanel>
          <g:FormPanel/>
          
            <g:FlowPanel>
                <g:Label>Quelle est le Prix ?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="prix" text="Entrer le prix"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabelP" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formActions" >

                <g:ResetButton ui:field="boutonClearP" text="Clear"/>
            </g:FlowPanel>
        </g:FlowPanel>
        
        
        <g:FlowPanel>
          <g:FormPanel/>
          
            <g:FlowPanel>
                <g:Label>Quelle est la remise?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="remise" text="Entrer la remise"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabelR" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formActions" >
                <g:ResetButton ui:field="boutonClearR" text="Clear"/>
            </g:FlowPanel>
        </g:FlowPanel>
        
        
            <g:SubmitButton ui:field="boutonEnregistrerP" text="Envoyer"/>
        
       </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>